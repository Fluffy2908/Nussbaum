{
  "name": "nussbaum-theme",
  "version": "1.0.0",
  "description": "Custom WordPress theme with Tailwind CSS v4 and Flowbite",
  "scripts": {
    "build": "tsx tailwind.config.ts && tailwindcss -i ./dist/style.css -o ./dist/output.css --minify",
    "watch": "tsx tailwind.config.ts && tailwindcss -i ./dist/style.css -o ./dist/output.css --watch",
    "start": "live-server dist",
    "dev": "concurrently \"npm run watch\" \"npm run start\""
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "@types/node": "^22.14.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "flowbite": "^3.1.2",
    "live-server": "^1.2.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
